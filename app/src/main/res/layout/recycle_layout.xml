<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ques_title"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="ffhdffgs"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ques_link"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="ffhdffgs" />
   <com.github.florent37.shapeofview.shapes.ArcView
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:elevation="4dp"
       android:id="@+id/user_foto"
    app:shape_arc_cropDirection="outside"
    app:shape_arc_height="20dp"
    app:shape_arc_position="bottom"
    >

   <ImageView

    android:layout_marginLeft="30dp"
    android:id="@+id/user_foto1"
    android:layout_marginTop="10dp"
    android:layout_below="@id/ques_link"
    android:layout_width="100dp"
    android:layout_height="100dp"
     />


</com.github.florent37.shapeofview.shapes.ArcView>



<TextView
    android:id="@+id/user_name"
    android:layout_toRightOf="@id/user_foto"
    android:layout_marginLeft="10dp"
    android:layout_below="@id/ques_link"
    android:layout_marginTop="30dp"
    android:text="ffhdffgs"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
<TextView
    android:id="@+id/user_stacklink"
    android:layout_toRightOf="@id/user_foto"
    android:layout_marginLeft="10dp"
    android:layout_below="@id/user_name"
    android:layout_marginTop="10dp"
    android:text="ffhdffgs"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
</RelativeLayout>